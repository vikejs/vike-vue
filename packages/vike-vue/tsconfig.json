{
  "include": ["./src"],
  "exclude": ["**/*.spec.ts"],
  "compilerOptions": {
    // Misc
    "skipLibCheck": true,
    "noErrorTruncation": true,
    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    // Resolution
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    // Libs
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["vite/client"],
    // Output
    "target": "ES2020",
    "module": "Node16",
    "outDir": "./dist/",
    "rootDir": "./src/"
  }
}
