{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "target": "ES2019",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "rootDir": "./src/",
    "outDir": "./dist/"
  }
}
