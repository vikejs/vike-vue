{
  "compilerOptions": {
    // Misc
    "skipLibCheck": true,
    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    // Resolution
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // Libs
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client"],
    // Output
    "module": "ES2020",
    "target": "ES2019",
    "outDir": "./dist/",
    "rootDir": "./",
    "declaration": true
  }
}
